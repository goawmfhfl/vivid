{
  "expo": {
    "name": "Vivid",
    "slug": "vivid-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "../../packages/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FAFAF8"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vivid.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FAFAF8"
      },
      "package": "com.vivid.mobile"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "../../packages/assets/splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#FAFAF8"
        }
      ],
      "expo-router",
      "expo-font",
      "expo-asset"
    ],
    "scheme": "vivid"
  }
}
