{
  "name": "today-journal-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --dir apps/web dev",
    "dev:mobile": "pnpm --dir apps/mobile dev",
    "build:web": "pnpm --dir apps/web build",
    "build:mobile": "pnpm --dir apps/mobile build",
    "build": "pnpm run build:web && pnpm run build:mobile"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "patch-package": "^8.0.0"
  }
}
